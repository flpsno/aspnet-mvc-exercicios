@{
    ViewBag.Title = "Index";
}

<h2>Listagem de Clientes</h2>

<div>
    <a href="/Clientes/Add">Adicionar Cliente</a>
</div>

<table>

    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Idade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Idade</td>
                <td>
                    <a href="/Clientes/Edit/@item.Id">Editar</a>
                    <a href="/Clientes/Delete/@item.Id">Excluir</a>
                </td>
            </tr> 
        }
    </tbody>

</table>
