@model FN.Store.UI.WebApp.Models.Usuario

@{
    ViewBag.Title = "MeuPerfil";
}

<h2>Meu Perfil</h2>

<div class="row">
    <div class="col-md-6">
        <div class="form-group row">
            <label for="staticId" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="staticId" value="@Model.Id">
            </div>
        </div>

        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="staticEmail" value="@Model.Email">
            </div>
        </div>

        <div class="form-group row">
            <label for="staticData" class="col-sm-2 col-form-label">Cadastro</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="staticData" value="@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss")">
            </div>
        </div>



    </div>
</div>

