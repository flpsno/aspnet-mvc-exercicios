@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">

    <div class="col-md-6">
        <form method="post">
            <input type="hidden" name="url" value="@ViewBag.url" />
            
            <div class="form-group">
                <label>Email</label>
                <input type="text" name="Email" autofocus class="form-control" />
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input type="password" name="Senha" class="form-control" />
            </div>

            <div>
                <button class="btn btn-primary">Login</button>
                <a class="btn btn-info" href="@Url.Action("Index", "Home")">Voltar</a>
            </div>
        </form>
    </div>

</div>
