<div class="modal" id="alterarSenhaModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Alterar Senha</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="password" autofocus class="form-control" placeholder="informe sua nova senha" id="senhaTxt" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="alterarSenhaBtn">Alterar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
